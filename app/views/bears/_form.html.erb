<div class = "container">
  <%= render 'layouts/errors', :object => @bear %>

  <%= form_for @bear do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :cost %>
    <%= f.text_field :cost %>
    <%= f.label :country %>
    <%= f.text_field :country %>
    <%= f.label :color %>
    <%= f.text_field :color %>
    <button class="waves-effect waves-light btn"><%= f.submit  %></button>
    <br>
    <br>
  <% end %>
</div>
